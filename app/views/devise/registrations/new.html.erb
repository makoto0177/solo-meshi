<div class="min-h-screen flex items-center justify-center bg-base-200 py-12 px-4 sm:px-6 lg:px-8">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-3xl font-bold text-center mb-6 justify-center">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-control w-full mb-4">
          <%= f.label :name, class: "label" do %>
            <span class="label-text font-semibold">Name</span>
          <% end %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input input-bordered w-full", placeholder: "Enter your name" %>
        </div>

        <div class="form-control w-full mb-4">
          <%= f.label :email, class: "label" do %>
            <span class="label-text font-semibold">Email</span>
          <% end %>
          <%= f.email_field :email, autocomplete: "email", class: "input input-bordered w-full", placeholder: "Enter your email" %>
        </div>

        <div class="form-control w-full mb-4">
          <%= f.label :password, class: "label" do %>
            <span class="label-text font-semibold">Password</span>
            <% if @minimum_password_length %>
              <span class="label-text-alt text-base-content/70">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full", placeholder: "Enter your password" %>
        </div>

        <div class="form-control w-full mb-6">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text font-semibold">Password confirmation</span>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full", placeholder: "Confirm your password" %>
        </div>

        <div class="form-control mt-6">
          <%= f.submit "Sign up", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider">OR</div>

      <div class="text-center">
        <%= link_to "Log in", new_session_path(resource_name), class: "link link-primary" %>
      </div>
    </div>
  </div>
</div>
