<div class="min-h-screen flex items-center justify-center bg-base-200 py-12 px-4 sm:px-6 lg:px-8">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-3xl font-bold text-center mb-6 justify-center">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-control w-full mb-4">
          <%= f.label :email, class: "label" do %>
            <span class="label-text font-semibold">Email</span>
          <% end %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full", placeholder: "Enter your email" %>
        </div>

        <div class="form-control w-full mb-4">
          <%= f.label :password, class: "label" do %>
            <span class="label-text font-semibold">Password</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full", placeholder: "Enter your password" %>
        </div>

        <div class="form-control mt-6">
          <%= f.submit "Log in", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider">OR</div>

      <div class="text-center">
        <%= link_to "Sign up", new_registration_path(resource_name), class: "link link-primary" %>
      </div>
    </div>
  </div>
</div>
