<% if shop.errors.any? %>
  <div class="mb-4 rounded border border-red-300 bg-red-50 p-4 text-red-700">
    <p class="font-semibold">入力内容にエラーがあります</p>
    <ul class="list-disc pl-5">
      <% shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: shop, local: true, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :name, "店舗名", class: "block font-medium mb-1" %>
    <%= f.text_field :name, class: "input input-bordered w-full", placeholder: "例: ソロメシ食堂" %>
  </div>

  <div>
    <%= f.label :area, "エリア", class: "block font-medium mb-1" %>
    <%= f.text_field :area, class: "input input-bordered w-full", placeholder: "例: 渋谷" %>
  </div>

  <div>
    <%= f.label :category, "カテゴリ", class: "block font-medium mb-1" %>
    <%= f.select :category, Shop::CATEGORIES, { prompt: "カテゴリを選択してください" }, class: "select select-bordered w-full" %>
  </div>

  <div>
    <%= f.label :address, "住所", class: "block font-medium mb-1" %>
    <%= f.text_field :address, class: "input input-bordered w-full", placeholder: "例: 東京都渋谷区..." %>
  </div>

  <div>
    <%= f.label :description, "説明", class: "block font-medium mb-1" %>
    <%= f.text_area :description, rows: 5, class: "textarea textarea-bordered w-full", placeholder: "店舗の特徴や雰囲気など" %>
  </div>

  <div>
    <%= f.submit submit_label, class: "btn btn-primary w-full" %>
  </div>
<% end %>
