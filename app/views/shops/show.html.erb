<div class="container mx-auto px-4 py-6 max-w-5xl">
  <!-- 戻るリンク -->
  <div class="mb-6">
    <%= link_to "← 店舗一覧に戻る", shops_path, class: "btn btn-sm btn-ghost" %>
  </div>

  <!-- 店舗情報 -->
  <div class="card bg-white shadow-lg">
    <div class="card-body">
      <h1 class="text-3xl font-bold mb-4"><%= @shop.name %></h1>

      <div class="space-y-2 text-gray-700">
        <div class="flex items-center gap-2">
          <span class="font-semibold">エリア:</span>
          <%= @shop.area %>
        </div>

        <div class="flex items-center gap-2">
          <span class="font-semibold">カテゴリー:</span>
          <%= @shop.category %>
        </div>

        <!-- 平均評価とレビュー件数 -->
        <div class="flex items-center gap-2 mt-4">
          <span class="font-semibold">平均評価:</span>
          <% if @shop.reviews_count > 0 %>
            <div class="flex items-center gap-2">
              <span class="text-2xl font-bold text-yellow-600">★ <%= @shop.average_rating.round(1) %></span>
              <span class="text-sm text-gray-600">(<%= @shop.reviews_count %>件のレビュー)</span>
            </div>
          <% else %>
            <span class="text-gray-500">レビューはまだありません</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- レビューセクション -->
  <div class="mt-8">
    <h2 class="text-2xl font-bold mb-4">レビュー</h2>

    <% if @posts.any? %>
      <div class="space-y-4">
        <% @posts.each do |post| %>
          <div class="card bg-white shadow">
            <div class="card-body">
              <!-- ユーザー情報と評価 -->
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-2">
                  <span class="font-semibold"><%= post.user.name %></span>
                  <span class="text-sm text-gray-500"><%= post.visited_at.strftime('%Y年%m月%d日') %>訪問</span>
                </div>
                <div class="text-xl font-bold text-yellow-600">★ <%= post.rating %></div>
              </div>

              <!-- 詳細情報 -->
              <div class="grid grid-cols-2 md:grid-cols-3 gap-2 text-sm text-gray-700 mb-3">
                <div><span class="font-semibold">客層:</span> <%= post.solo_customer_level %></div>
                <div><span class="font-semibold">雰囲気:</span> <%= post.casual_level %></div>
                <div><span class="font-semibold">音量:</span> <%= post.noise_level %></div>
                <div><span class="font-semibold">カウンター席:</span> <%= post.counter_seat %></div>
                <div><span class="font-semibold">混雑度:</span> <%= post.crowdedness_level %></div>
              </div>

              <!-- コメント -->
              <% if post.comment.present? %>
                <div class="mt-3 p-3 bg-gray-50 rounded">
                  <p class="text-gray-800"><%= post.comment %></p>
                </div>
              <% end %>

              <!-- 投稿詳細リンク -->
              <div class="mt-3 text-right">
                <%= link_to "詳細を見る", post_path(post), class: "text-blue-600 hover:text-blue-800 text-sm" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="card bg-white shadow">
        <div class="card-body text-center text-gray-500">
          この店舗にはまだレビューがありません
        </div>
      </div>
    <% end %>
  </div>
</div>
