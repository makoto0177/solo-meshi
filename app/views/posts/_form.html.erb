<% if post.errors.any? %>
  <div class="mb-4 rounded border border-red-300 bg-red-50 p-4 text-red-700">
    <p class="font-semibold">入力内容にエラーがあります</p>
    <ul class="list-disc pl-5">
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: post, local: true, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :visited_at, "訪問日", class: "block font-medium mb-1" %>
    <%= f.date_field :visited_at, class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= f.label :rating, "評価", class: "block font-medium mb-1" %>
    <%= f.select :rating,
                [["★☆☆☆☆ (1.0)", 1.0],
                 ["★☆☆☆☆ (1.5)", 1.5],
                 ["★★☆☆☆ (2.0)", 2.0],
                 ["★★☆☆☆ (2.5)", 2.5],
                 ["★★★☆☆ (3.0)", 3.0],
                 ["★★★☆☆ (3.5)", 3.5],
                 ["★★★★☆ (4.0)", 4.0],
                 ["★★★★☆ (4.5)", 4.5],
                 ["★★★★★ (5.0)", 5.0]],
                 { prompt: "評価を選択してください" } %>
  </div>

  <div>
    <%= f.label :solo_customer_level, "一人客の多さ", class: "block font-medium mb-1" %>
    <%= f.select :solo_customer_level, Post::SOLO_CUSTOMER_LEVELS, { include_blank: "選択してください" }, class: "select select-bordered w-full" %>
  </div>

  <div>
    <%= f.label :casual_level, "カジュアル度", class: "block font-medium mb-1" %>
    <%= f.select :casual_level, Post::CASUAL_LEVELS, { include_blank: "選択してください" }, class: "select select-bordered w-full" %>
  </div>

  <div>
    <%= f.label :noise_level, "静かさ", class: "block font-medium mb-1" %>
    <%= f.select :noise_level, Post::NOISE_LEVELS, { include_blank: "選択してください" }, class: "select select-bordered w-full" %>
  </div>

  <div>
    <%= f.label :counter_seat, "カウンター席", class: "block font-medium mb-1" %>
    <%= f.select :counter_seat, Post::COUNTER_SEATS, { include_blank: "選択してください" }, class: "select select-bordered w-full" %>
  </div>

  <div>
    <%= f.label :crowdedness_level, "混雑度", class: "block font-medium mb-1" %>
    <%= f.select :crowdedness_level, Post::CROWDEDNESS_LEVELS, { include_blank: "選択してください" }, class: "select select-bordered w-full" %>
  </div>

  <div>
    <%= f.label :comment, "コメント", class: "block font-medium mb-1" %>
    <%= f.text_area :comment, rows: 5, class: "textarea textarea-bordered w-full" %>
  </div>

  <div>
    <%= f.submit submit_label, class: "btn btn-primary w-full" %>
  </div>
<% end %>
